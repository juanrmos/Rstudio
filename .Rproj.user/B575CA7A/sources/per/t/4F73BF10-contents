  select(A√±o, Tipo_Contratacion, Monto_Total, Porcentaje_Monto) %>%
  arrange(A√±o, desc(Monto_Total)) %>%
  group_by(A√±o) %>%
  slice_head(n = 5)  # Top 5 por a√±o

print(tabla_distribucion)
