```{r}
# An√°lisis mensual para detectar picos
analisis_mensual <- datos %>%
  mutate(A√±o_Mes = floor_date(Fecha_Emision, "month")) %>%
  group_by(A√±o_Mes) %>%
  summarise(
    Monto_Mensual = sum(Monto_limpio),
    Num_Ordenes = n(),
    .groups = 'drop'
  ) %>%
  mutate(
    Cambio_Mensual = (Monto_Mensual - lag(Monto_Mensual)) / lag(Monto_Mensual) * 100
  )

# Identificar picos y ca√≠das (>50% cambio)
picos_caidas <- analisis_mensual %>%
  filter(abs(Cambio_Mensual) > 50, !is.na(Cambio_Mensual)) %>%
  mutate(
    Tipo = ifelse(Cambio_Mensual > 0, "PICO", "CA√çDA"),
    Mes_A√±o = format(A√±o_Mes, "%b-%Y")
  )
print(picos_caidas %>% select(Mes_A√±o, Tipo, Cambio_Mensual, Monto_Mensual))
```

```{r}
# Gr√°fico de evoluci√≥n anual
grafico_evolucion <- ggplot(comparacion_anual, aes(x = factor(A√±o))) +
  geom_bar(aes(y = Monto_Total/1000000), stat = "identity", fill = "#3498db", alpha = 0.7) +
  geom_line(aes(y = Num_Ordenes/10, group = 1), color = "#e74c3c", linewidth = 2) +
  geom_point(aes(y = Num_Ordenes/10), color = "#e74c3c", linewidth = 3) +
  scale_y_continuous(
    name = "Monto Total (Millones S/)",
    sec.axis = sec_axis(~.*10, name = "N√∫mero de √ìrdenes")
  ) +
  labs(
    title = "Evoluci√≥n Anual del Gasto y √ìrdenes",
    subtitle = "Barras = Monto Total | L√≠nea = N√∫mero de √ìrdenes",
    x = "A√±o"
  ) +
  theme_minimal() +
  theme(
    plot.title = element_text(size = 14, face = "bold"),
    axis.text.x = element_text(size = 11)
  )

print(grafico_evolucion)

