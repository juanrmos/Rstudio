  group_by(A√±o, Tipo_Contratacion) %>%
  summarise(
    Monto_Total = sum(Monto_limpio),
    Num_Ordenes = n(),
    .groups = 'drop'
  ) %>%
  group_by(A√±o) %>%
  mutate(
    Porcentaje_Monto = Monto_Total / sum(Monto_Total) * 100,
    Porcentaje_Ordenes = Num_Ordenes / sum(Num_Ordenes) * 100
  )

